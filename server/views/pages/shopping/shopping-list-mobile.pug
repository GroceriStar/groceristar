    section#todoapp
      header#header
        //h1= name
        input#new-todo(placeholder='Item name', autofocus='', data-department-id=departmentId)
      section#main
        input#toggle-all(type='checkbox')
        label(for='toggle-all') Mark all as complete

        ul#todo-list
          
           each element in list
            //h2=element.completed
            if element.completed
              li.completed(data-id=element.id, data-department-id=element.departmentId, data-order=element.order, data-custom=element.custom)
            else
              li(data-id=element.id, data-department-id=element.departmentId, data-order=element.order, data-custom=element.custom)

                div.view
                  if element.completed
                    input.toggle(type="checkbox", checked="checked")
                  else
                    input.toggle(type="checkbox")
                  label= element.name
                  button.destroy
                input.edit(value=element.name)


      footer#footer
    footer#info
