extends ../layouts/dashboard

block content
  .row.mt-120 
    if groceries.length !== 0
      .col-md-8
        h1 Your current Grocery List is:
        .row
          .col-md-8 
            +view_groceries_short_one(groceries[0]) 

      .col-md-4
        .panel.panel-bordered
          .panel-body
            h4 Ð¡reate new list by cloning Grocery Template
          .panel-footer 
            include ../forms/clone-grocery
              

    else
      .col-md-8
        h3 You don't clone any grocery list yet.
        +link_clone_ultimate2(ultimate.id, 'Start to work by clonning Ultimate Grocery template')
    

    if groceries.length >= 1
      .col-md-8.mt-80
        h1 Your Grocery Lists
      .col-md-8
        .row
          .col-md-8
            +view_groceries_short2(groceries)
