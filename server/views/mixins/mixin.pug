mixin link(href, name)
  a.btn(class!=attributes.class title=name href=href target="_blank")= name

// example +link('http://peexaweb.com', 'Google')(class="additional-class")

mixin view_departments1(array)
  ul
    each val, index in array
        li= val.name + '( ' + val.id + ' ) '
          a(href='/#' + val.id) view  

mixin view_departments_extended(array)
  ul
    each val, index in array
        li= val.name + '( ' + val.id + ' ) ' + ' isVISIBLE?:  ' + val.visible
          a(href='/#' + val.id) ' ' + view  

mixin view_departments_awesome(array)
  if array
    ul
      each val, index in array
        li= val.name + '( ' + val.id + ' ) '
          a(href='/#' + val.id) view

        //if user
        //- User *is* logged In

          a(href='/visibility/department/' + val.id)
            i.fa.fa-bell.fa-4x
            SHOW   

mixin view_groceries_short(array)
  br
  ul
    each val, index in array
      li= val.title + '( ' + val.id + ' ) '
        a(href='/view/grocery/' + val.id, class="btn") link
      a(href='/change-the-name/grocery/' + val.id, class="btn") [change name beatch2!]

mixin view_groceries_departments(array)

  br
  ul
    each val, index in array
      li= val.title + '( ' + val.id + ' ) '
        a(href='/view/grocery/' + val.id, class="btn") link
      a(href='/change-the-name/grocery/' + val.id, class="btn") [change name beatch2!]

      +view_departments_awesome(val.departments)
      hr 