style(type="text/css").
  select {

    /* styling */
    background-color: white;
    display: inline-block;
    font: inherit;
    line-height: 1.5em;
    padding: 0.5em 3.5em 0.5em 1em;

    /* reset */
    margin: 0;      
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }

  .cs-select.cs-mobile-select {
    margin: 0;
    width: 100%;
    font-size: 24px;
    font-family: inherit;
    font-weight: inherit;
    line-height: 1.4em;
    border: none;
    padding: 0.5em 3.5em 0.5em 1em;
    color: black;
  }
  select#departmentList {
    display:none;
  }

form#choose-department(name="formsubmit", method="post")


  select.cs-select.cs-skin-border#departmentList(class=isMobile ? 'cs-mobile-select' : '')
    option(value='', disabled='', selected='') Department

    each val, index in departments
      if (val.ingredients.length !== 0)
        if(val.id == departmentId)
          option(value=val.id, selected="selected")= val.name 
        else
          option(value=val.id)= val.name   

  br
  br
  input#grocery(type="hidden", name="grocery", value=groceryId)