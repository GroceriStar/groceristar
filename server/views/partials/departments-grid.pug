.col-md-12
  each val, index in elements
    .col-md-4.element-item
      h3= val.name

        +dropdown2(groceryId, val.id, val.ingredients.length)

            
      h5= val.type                  
      h5= val.id + ' <= Department ID'

      if val.ingredients.length
        ul
          each ing, j in val.ingredients
          
            li= ing[1]           
            +links(ing[0], ing[2]) 
            //ing[0] = id, ing[2] = delete link 
     
      hr


.col-md-12
  .round-border
    each val, index in elements
      a.border-item(href='/shopping/' + groceryId + '/' + val.id)
        h4.list-group-item-heading= val.name + '( ' + val.id + ' ) '
          i.fa.fa-long-arrow-right(aria-hidden="true")
          if val.ingredients.length
            i.fa.fa-eye-slash
          else    
            i.fa.fa-eye

    .col-md-12
      if val.ingredients.length
        ul
          each ing, j in val.ingredients
          
            li= ing[1]           
            +links(ing[0], ing[2]) 
            //ing[0] = id, ing[2] = delete link 
      else
        h2 | You don't have any ingredients   

hr      